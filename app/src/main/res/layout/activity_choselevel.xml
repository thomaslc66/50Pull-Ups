<?xml version="1.0" encoding="utf-8"?>
<ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/pager">

        <PagerTitleStrip
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentRight="false"
                    android:background="@color/footer_bg"
                    android:layout_alignParentTop="false"
                    android:layout_marginBottom="10dp"
                    android:weightSum="8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/txtViewLevel"
                        android:layout_weight="3"
                        android:textColor="#ffe3d543"
                        android:textSize="22dp"
                        android:layout_marginLeft="15dp"
                        android:paddingLeft="1dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textView7"
                        android:layout_weight="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/txtviewArrowLeft"
                        android:layout_weight="0.6"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginLeft="25dp"
                        android:layout_gravity="top|left"
                        android:gravity="left|center_vertical"
                        android:layout_marginBottom="2dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/txtviewArrowRight"
                        android:layout_weight="0.60"
                        android:textColor="@color/snow_light"
                        android:gravity="center_vertical|right"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:layout_gravity="top|right" />

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtSelectDay"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"
                android:text="@string/selectDay" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectLevelList"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:choiceMode="singleChoice"
                android:drawSelectorOnTop="false"
                android:padding="5dp"
                android:divider="@color/bg"
                android:dividerHeight="10dp" />


            </PagerTitleStrip>

</ViewPager>